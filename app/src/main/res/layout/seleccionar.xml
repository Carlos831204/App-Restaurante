<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1B08D"
    tools:context=".seleccionar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Nombre"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Escriba su nombre"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Platos típicos"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/plato1"
            android:layout_width="176dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Cazuela de frijoles" />

        <CheckBox
            android:id="@+id/plato2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Bandeja paisa" />

        <CheckBox
            android:id="@+id/plato3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Mondongo" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Bebidas"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/bebida1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Agua de panela" />

        <CheckBox
            android:id="@+id/bebida2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Chicha" />

        <CheckBox
            android:id="@+id/bebida3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Guarapo" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Postres"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/postre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Arroz con leche" />

        <CheckBox
            android:id="@+id/postre2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Natilla" />

        <CheckBox
            android:id="@+id/postre3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Plátano calado" />

        <Button
            android:id="@+id/consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Consultar"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>